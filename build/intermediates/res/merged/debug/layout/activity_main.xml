<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/desk5"
    tools:context="audiorecordUI.MainActivity" >
   <TextView 
       android:id = "@+id/hint"
       android:layout_width = "wrap_content"
       android:layout_height = "wrap_content"
       android:layout_alignParentTop="true"
       android:textColor="#ffffff"
       android:textSize="12sp"
       android:layout_marginTop="4dp"
       android:textStyle="italic"
       android:layout_centerHorizontal="true"
       />
   <TextView
      android:id="@+id/intro"
      android:layout_width="300dp"
      android:layout_height="300dp"
      android:layout_marginTop="55dp"
      android:layout_centerHorizontal="true"
      android:maxLines = "25"
	  android:scrollbars = "vertical"
      android:textColor="#ffffff"
      android:textSize="15sp" />
	<SurfaceView 
	   android:id="@+id/soundWave"
	   android:layout_width="fill_parent"
	   android:layout_height="100dip"
	   android:layout_below="@id/intro"
	    />
  <RelativeLayout 
    android:id="@+id/bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 	android:layout_alignParentBottom ="true"
 	
    >
    <FrameLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerHorizontal="true"
        android:id = "@+id/waveAndBut">
          <audiorecordUI.RecordWave 
		      android:id="@+id/wave"
		      android:layout_width = "200dp"
		      android:layout_height = "200dp"     
		      android:layout_gravity="center"
     	  />
		  <audiorecordUI.RecordButton 
		      android:id="@+id/start"
		      android:layout_width="60dp"
		      android:layout_height="60dp"
		      android:layout_gravity="center"
		  />
	 </FrameLayout>
	 <FrameLayout
	     android:layout_width="100dp"
		 android:layout_height="26dp"
		 android:layout_alignParentLeft="true"
		 android:layout_marginTop="125dp"
		 android:background="@drawable/k"
		 android:id="@+id/frameLayout">
	  <EditText
		  android:id="@+id/rsKK"
		  android:layout_width="match_parent"
		  android:layout_height="match_parent"
		  android:layout_alignParentLeft="true"
		  android:background="@android:color/transparent"
		  android:layout_marginLeft="30dp"
		  android:textColor="@android:color/white"
		  
		  />
	  </FrameLayout>
	 <ImageButton 
	      android:id="@+id/menu"
	      android:layout_width="30dp"
	      android:layout_height="30dp"
	      android:background="@drawable/menu"
	      android:layout_centerVertical="true"
	      android:layout_marginLeft="20dp"
	      android:layout_toRightOf = "@id/waveAndBut"
	      />

	  <ToggleButton
		  android:text="rekeySwitch"
		  android:layout_width="60dp"
		  android:layout_height="35dp"
		  android:layout_below="@+id/frameLayout"
		  android:layout_toStartOf="@+id/waveAndBut"
		  android:id="@+id/rekeySwitch"
		  android:layout_marginTop="10dp"
		  android:textSize="0sp"/>

  </RelativeLayout>



</RelativeLayout>
